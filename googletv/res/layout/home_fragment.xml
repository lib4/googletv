<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_tile_background_color"
    android:orientation="vertical"
    android:weightSum="1.0" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight=".2"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="3dp"
            android:weightSum="1.0" >

            <RelativeLayout
                android:id="@+id/time_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5" >

                <ImageView
                    android:id="@+id/time_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight=".5"
                    android:src="@drawable/icon_3" />

                <TextView
                    android:id="@+id/timetext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
             
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="12:00 PM"
                    android:textColor="@color/white_tile_background_color"
                    android:textSize="38dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/weather_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5" >

                <ImageView
                    android:id="@+id/time_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight=".5"
                    android:src="@drawable/icon_3" />

                <TextView
                    android:id="@+id/weathertext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="12ÂºC"
                    android:textColor="@color/white_tile_background_color"
                    android:textSize="38dp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>

        <com.lib4.googletv.ImageHolderView
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/parentholder"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".6" >
        </com.lib4.googletv.ImageHolderView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight=".2"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:weightSum="1.0" >

            <ImageView
                android:id="@+id/time_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:src="@drawable/htlogo" />

            <ImageView
                android:id="@+id/weather_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:src="@drawable/help" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/app_holder"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="right"
        android:layout_weight=".3"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="1dp"
        android:visibility="gone"
        android:weightSum="1.0" >
    </LinearLayout>

</LinearLayout>